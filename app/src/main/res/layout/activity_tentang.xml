<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavenderblue"
    tools:context=".TentangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="TENTANG APLIKASI"
            android:layout_marginTop="15dp"
            android:textColor="@color/periwinkle"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/periwinkle"
            android:text="Dataset Kaggle : "
            android:textStyle="bold"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/periwinkle"
            android:text="https://www.kaggle.com/datasets/sajidsaifi/prostate-cancer"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="Tujuan Aplikasi : "
            android:textStyle="bold"
            android:textColor="@color/periwinkle"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="Memberikan informasi tentang gejala kanker prostat melalui aplikasi dengan cara menginputkan hal-hal yang menyebabkan kanker prostat dan mencegah ke stadium lanjut"
            android:textColor="@color/periwinkle"
            android:textSize="19dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/periwinkle"
            android:text="Output Yang Akan Dihasilkan: "
            android:textStyle="bold"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="Ada dua output yang di hasilkan yaitu B (benign cancer / kanker jinak) yang di visualisasi kan angka 0 dan M (malignant cancer / kanker ganas) yang di visualisasikan angka 1 "
            android:textColor="@color/periwinkle"
            android:textSize="19dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/periwinkle"
            android:text="Cara menggunakan aplikasi : "
            android:textStyle="bold"
            android:textSize="19dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:text="Buka aplikasi Cancer Prostat Disease dan mulai untuk memprediksi"
            android:textColor="@color/periwinkle"
            android:textSize="19dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>